{
  "coin": {
    "name": "SmartCash",
    "shortcut": "SMART",
    "label": "SmartCash",
    "alias": "smartcash"
  },
  "ports": {
    "backend_rpc": 8064,
    "backend_message_queue": 38364,
    "blockbook_internal": 9064,
    "blockbook_public": 9164
  },
  "ipc": {
    "rpc_url_template": "http://127.0.0.1:{{.Ports.BackendRPC}}",
    "rpc_user": "rpc",
    "rpc_pass": "rpc",
    "rpc_timeout": 25,
    "message_queue_binding_template": "tcp://127.0.0.1:{{.Ports.BackendMessageQueue}}"
  },
  "backend": {
    "package_name": "backend-smartcash", 
    "package_revision": "satoshilabs-1",
    "system_user": "smartcash",
    "version": "2.1.0",
    "binary_url": "https://github.com/SmartCash/Core-Smart/releases/download/v2.1.0/smartcash-2.1.0-x86_64-linux-gnu.tar.gz",
    "verification_type": "sha256",
    "verification_source": "1fd4176c8bf26f6e270c8ca0010031937a23f917d15a8afaefc272e5e4d19e45",
    "extract_command": "tar -C backend --strip 1 -xf",
    "exclude_files": [
      "bin/smartcash-qt"
    ],
    "exec_command_template": "{{.Env.BackendInstallPath}}/{{.Coin.Alias}}/bin/smartcashd -datadir={{.Env.BackendDataPath}}/{{.Coin.Alias}}/backend -conf={{.Env.BackendInstallPath}}/{{.Coin.Alias}}/{{.Coin.Alias}}.conf -pid=/run/{{.Coin.Alias}}/{{.Coin.Alias}}.pid",
    "logrotate_files_template": "{{.Env.BackendDataPath}}/{{.Coin.Alias}}/backend/*.log",
    "postinst_script_template": "",
    "service_type": "forking",
    "service_additional_params_template": "",
    "protect_memory": true,
    "mainnet": true,
    "server_config_file": "bitcoin_like.conf",
    "client_config_file": "bitcoin_like_client.conf",
    "additional_params": {
      "whitelist": "127.0.0.1"
    }
  },
  "blockbook": {
    "package_name": "blockbook-smartcash",
    "system_user": "blockbook-smartcash",
    "internal_binding_template": ":{{.Ports.BlockbookInternal}}",
    "public_binding_template": ":{{.Ports.BlockbookPublic}}",
    "explorer_url": "",
    "additional_params": "-dbcache=1073741824",
    "block_chain": {
      "parse": true,
      "mempool_workers": 8,
      "mempool_sub_workers": 2,
      "block_addresses_to_keep": 300,
      "xpub_magic": 76067358,
      "slip44": 224,
      "additional_params": {
        "fiat_rates": "coingecko",
        "fiat_rates_params": "{\"url\": \"https://api.coingecko.com/api/v3\", \"coin\": \"smartcash\", \"periodSeconds\": 60}"
      }
    }
  },
  "meta": {
    "package_maintainer": "IT",
    "package_maintainer_email": "it@satoshilabs.com"
  }
}
